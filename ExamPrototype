<script>
    let answers1 = ["B", "C", "A", "B", "A", "B", "B", "C"];
    let answers2 = ["A", "C", "B", "B", "A", "A", "B"];
    let score = 0;

    function nextPage() {
        let examForm1 = document.forms["examForm1"];
        let formValid = validateForm(examForm1);
        
        if (formValid) {
            document.getElementById("page1").style.display = "none";
            document.getElementById("page2").style.display = "block";
        }
    }

    function validateForm(form) {
        let valid = true;
        for (let i = 0; i < form.length; i++) {
            if (form[i].type === "radio") {
                let groupName = form[i].name;
                if (!form[groupName].value) {
                    alert("Please answer all questions before proceeding.");
                    valid = false;
                    break;
                }
            }
        }
        return valid;
    }

    function submitExam() {
        let examForm2 = document.forms["examForm2"];
        if (validateForm(examForm2)) {
            let name = document.getElementById("name").value;
            let grade = document.getElementById("grade").value;
            calculateScore();

            document.getElementById("page2").style.display = "none";
            document.getElementById("resultPage").style.display = "block";
            document.getElementById("score").innerText = `${name}, you scored: ${score}/15`;
            let feedback = score >= 12 ? "Great job!" : "Keep practicing!";
            document.getElementById("feedback").innerText = feedback;

            // Show video links if score is between 0 and 10
            if (score <= 10) {
                document.getElementById("videoList").style.display = "block";
            }
        }
    }

    function calculateScore() {
        let examForm1 = document.forms["examForm1"];
        let examForm2 = document.forms["examForm2"];

        for (let i = 0; i < answers1.length; i++) {
            if (examForm1[`q${i + 1}`].value === answers1[i]) {
                score++;
            }
        }

        for (let i = 0; i < answers2.length; i++) {
            if (examForm2[`q${i + 9}`].value === answers2[i]) {
                score++;
            }
        }
    }
</script>

